<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookShelf - @ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-blue-50 min-h-screen flex flex-col text-gray-800">
    <header class="bg-blue-800 text-blue-50 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-2">
                @if (ViewData["HideLogo"] as bool? != true){
                <div class="gold-gradient p-2 rounded-lg">
                    
                    <i class="fas fa-book-open text-xl"></i>
                </div>
                
                <a href="/" class="text-xl font-bold cursor-pointer">BookShelf</a>
                }
            </div>
            <a href="/" asp-controller="Home" asp-action="Index" class="hover:text-amber-300 transition cursor-pointer">
                Voltar ao site
            </a>
        </div>
    </header>

    <main class="flex-grow flex items-center justify-center p-4">
        <div class="@ViewData["MainContainerClass"]">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-blue-800 text-blue-50 p-4 text-center">
        &copy; @DateTime.Now.Year - BookShelf
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
