@model IEnumerable<Bookshelf.Models.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gerenciamento de Usuários";
    ViewData["MainContainerClass"] = "w-full";
    ViewData["HideLogo"] = true;
}

<main class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar Menu -->
        <div class="fixed top-0 left-0 w-48 h-screen bg-blue-800 text-white p-4 hidden md:block">
            <div class="p-4">
                <div class="flex items-center space-x-2 mb-8">
                    <div class="gold-gradient p-2 rounded-lg">
                        <i class="fas fa-users text-xl text-white"></i>
                    </div>
                    <h1 class="text-xl font-bold">BookShelf Admin</h1>
                </div>
                
                <div class="mb-8">
                    <h2 class="text-base font-semibold mb-3 gold-text">Menu</h2>
                    <ul class="space-y-2">
                        <li><a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                            <i class="fas fa-tachometer-alt w-4"></i>
                            <span>Dashboard</span>
                        </a></li>
                        <li>
                            <a href="/Usuario/ListaUsuarios" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded bg-blue-700">
                                <i class="fas fa-users w-4"></i>
                                <span>Usuários</span>
                            </a>
                        </li>
                        <li><a href="/Livro/Gerenciamento" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                            <i class="fas fa-book w-4"></i>
                            <span>Livros</span>
                        </a></li>
                        <li><a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                            <i class="fas fa-tags w-4"></i>
                            <span>Categorias</span>
                        </a></li>
                        <li><a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                            <i class="fas fa-comments w-4"></i>
                            <span>Comentários</span>
                        </a></li>
                    </ul>
                </div>

                <div class="mb-8">
                    <h2 class="text-base font-semibold mb-3 gold-text">Relatórios</h2>
                    <ul class="space-y-2">
                        <li>
                            <a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                                <i class="fas fa-chart-line w-4"></i>
                                <span>Estatísticas</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                                <i class="fas fa-file-export w-4"></i>
                                <span>Exportar Dados</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div>
                    <h2 class="text-base font-semibold mb-3 gold-text">Configurações</h2>
                    <ul class="space-y-2">
                        <li>
                            <a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                                <i class="fas fa-cog w-4"></i>
                                <span>Sistema</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center space-x-2 hover:text-amber-300 transition p-2 rounded">
                                <i class="fas fa-user-shield w-4"></i>
                                <span>Permissões</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 md:ml-56">
            <!-- Header -->
            <header class="bg-white shadow-sm p-4 flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <button id="mobile-menu-toggle" class="md:hidden text-blue-800">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 class="text-xl font-bold text-blue-800">Gerenciamento de Usuários</h1>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <button class="text-blue-800 hover:text-blue-600">
                            <i class="fas fa-bell text-xl"></i>
                            <span class="absolute top-0 right-0 h-2 w-2 rounded-full bg-red-500"></span>
                        </button>
                    </div>
                    <div class="flex items-center space-x-2">
                        <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Admin" class="w-8 h-8 rounded-full">
                        <span class="font-medium hidden md:inline">Admin</span>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <main class="p-4">
                <!-- Actions Bar -->
                <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                        <div class="relative w-full md:w-64">
                            <input type="text" placeholder="Buscar usuários..." class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>
                        <div class="flex space-x-2">
                            <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center space-x-2">
                                <i class="fas fa-filter"></i>
                                <span>Filtrar</span>
                            </button>
                            <a href="/Usuario/Registrar" class="gold-gradient hover:bg-amber-600 text-white px-4 py-2 rounded-lg flex items-center space-x-2">
                                <i class="fas fa-plus"></i>
                                <span>Adicionar Usuário</span>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gradient-to-r from-blue-700 to-blue-500 text-white">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider">Nome</th>
                                    <th class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider">Papel</th>
                                    <th class="px-6 py-3 text-center text-xs font-bold uppercase tracking-wider">Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-100">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var usuario in Model)
                                    {
                                        <tr class="hover:bg-blue-50 transition">
                                            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">@usuario.Nome</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-700">@usuario.Email</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-700">@usuario.Papel</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                                <a href="/Usuario/Editar/@usuario.Id" class="inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition font-semibold text-xs mr-2">
                                                    <i class="fas fa-edit mr-1"></i>Editar
                                                </a>
                                                <form action="/Usuario/Excluir/@usuario.Id" method="post" class="inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="inline-block px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition font-semibold text-xs">
                                                        <i class="fas fa-trash-alt mr-1"></i>Excluir
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="px-6 py-8 text-center text-gray-400">
                                            Nenhum usuário cadastrado.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <p class="mt-4">Total de usuários: @(Model == null ? 0 : Model.Count())</p>
            </main>
        </div>
    </div>
</main>