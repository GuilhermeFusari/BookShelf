        const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
        const bookForm = document.getElementById('book-form');
        const modalTitle = document.getElementById('modal-title');
        const deleteBookTitle = document.getElementById('delete-book-title');
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const closeMenuBtn = document.getElementById('close-menu');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const coverInput = document.getElementById('cover');
        const coverPreview = document.getElementById('cover-preview');

        // Variables
        let currentBookId = null;
        let isEditMode = false;

        // Initialize the app
        function init() {
            renderBooksTable();
            setupEventListeners();
        }

        // Render books table
        function renderBooksTable() {
            booksTableBody.innerHTML = '';
            
            books.forEach(book => {
                const row = document.createElement('tr');
                row.className = 'table-row-hover';
                row.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <input type="checkbox" class="h-4 w-4 text-blue-600 rounded">
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-10 w-10">
                                <img class="h-10 w-10 rounded book-cover" src="${book.cover}" alt="${book.title}">
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">${book.title}</div>
                                <div class="text-sm text-gray-500">ID: ${book.id}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">${book.author}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${getCategoryBadgeClass(book.category)}">
                            ${getCategoryText(book.category)}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${getStatusBadgeClass(book.status)}">
                            ${getStatusText(book.status)}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        ${book.added}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <span class="text-yellow-500 mr-1">${book.rating}</span>
                            <i class="fas fa-star text-yellow-400"></i>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button class="text-blue-600 hover:text-blue-900 mr-3 edit-btn" data-id="${book.id}">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="text-red-600 hover:text-red-900 delete-btn" data-id="${book.id}">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                `;
                booksTableBody.appendChild(row);
            });

            // Update pagination info
            document.getElementById('pagination-from').textContent = '1';
            document.getElementById('pagination-to').textContent = books.length;
            document.getElementById('pagination-total').textContent = '50';
        }

        // Get badge class based on book category
        function getCategoryBadgeClass(category) {
            switch(category) {
                case 'fiction': return 'bg-purple-100 text-purple-800';
                case 'romance': return 'bg-pink-100 text-pink-800';
                case 'fantasy': return 'bg-indigo-100 text-indigo-800';
                case 'biography': return 'bg-blue-100 text-blue-800';
                case 'history': return 'bg-yellow-100 text-yellow-800';
                case 'science': return 'bg-green-100 text-green-800';
                case 'technology': return 'bg-teal-100 text-teal-800';
                default: return 'bg-gray-100 text-gray-800';
            }
        }

        // Get category text
        function getCategoryText(category) {
            switch(category) {
                case 'fiction': return 'Ficção';
                case 'romance': return 'Romance';
                case 'fantasy': return 'Fantasia';
                case 'biography': return 'Biografia';
                case 'history': return 'História';
                case 'science': return 'Ciência';
                case 'technology': return 'Tecnologia';
                default: return category;
            }
        }

        // Get badge class based on book status
        function getStatusBadgeClass(status) {
            switch(status) {
                case 'published': return 'bg-green-100 text-green-800';
                case 'pending': return 'bg-yellow-100 text-yellow-800';
                default: return 'bg-red-100 text-red-800';
            }
        }

        // Get status text
        function getStatusText(status) {
            switch(status) {
                case 'published': return 'Publicado';
                case 'pending': return 'Pendente';
                default: return 'Rejeitado';
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            // Mobile menu
            mobileMenuToggle.addEventListener('click', () => {
                mobileSidebar.classList.remove('-translate-x-full');
            });

            closeMenuBtn.addEventListener('click', () => {
                mobileSidebar.classList.add('-translate-x-full');
            });

            // Modals
            addBookBtn.addEventListener('click', openAddBookModal);
            closeModalBtn.addEventListener('click', closeBookModal);
            cancelBtn.addEventListener('click', closeBookModal);
            closeDeleteModalBtn.addEventListener('click', closeDeleteModal);
            cancelDeleteBtn.addEventListener('click', closeDeleteModal);

            // Edit buttons
            document.addEventListener('click', (e) => {
                if (e.target.classList.contains('edit-btn') || e.target.parentElement.classList.contains('edit-btn')) {
                    const btn = e.target.classList.contains('edit-btn') ? e.target : e.target.parentElement;
                    const bookId = parseInt(btn.getAttribute('data-id'));
                    openEditBookModal(bookId);
                }
                
                if (e.target.classList.contains('delete-btn') || e.target.parentElement.classList.contains('delete-btn')) {
                    const btn = e.target.classList.contains('delete-btn') ? e.target : e.target.parentElement;
                    const bookId = parseInt(btn.getAttribute('data-id'));
                    openDeleteModal(bookId);
                }
            });

            // Form submission
            bookForm.addEventListener('submit', handleFormSubmit);

            // Delete confirmation
            confirmDeleteBtn.addEventListener('click', handleDeleteBook);

            // Cover image preview
            coverInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        coverPreview.querySelector('img').src = event.target.result;
                        coverPreview.classList.remove('hidden');
                    };
                    reader.readAsDataURL(file);
                }
            });
        }

        // Open add book modal
        function openAddBookModal() {
            isEditMode = false;
            modalTitle.textContent = 'Adicionar Novo Livro';
            document.getElementById('book-id').value = '';
            document.getElementById('title').value = '';
            document.getElementById('author').value = '';
            document.getElementById('isbn').value = '';
            document.getElementById('publisher').value = '';
            document.getElementById('year').value = '';
            document.getElementById('pages').value = '';
            document.getElementById('category').value = '';
            document.getElementById('language').value = 'portuguese';
            document.getElementById('description').value = '';
            document.getElementById('status').value = 'published';
            coverInput.value = '';
            coverPreview.classList.add('hidden');
            openBookModal();
        }

        // Open edit book modal
        function openEditBookModal(bookId) {
            const book = books.find(b => b.id === bookId);
            if (!book) return;

            isEditMode = true;
            currentBookId = bookId;
            modalTitle.textContent = 'Editar Livro';
            document.getElementById('book-id').value = book.id;
            document.getElementById('title').value = book.title;
            document.getElementById('author').value = book.author;
            document.getElementById('isbn').value = book.isbn;
            document.getElementById('publisher').value = book.publisher;
            document.getElementById('year').value = book.year;
            document.getElementById('pages').value = book.pages;
            document.getElementById('category').value = book.category;
            document.getElementById('language').value = book.language;
            document.getElementById('description').value = book.description;
            document.getElementById('status').value = book.status;
            coverInput.value = '';
            
            // Set cover preview if exists
            if (book.cover) {
                coverPreview.querySelector('img').src = book.cover;
                coverPreview.classList.remove('hidden');
            } else {
                coverPreview.classList.add('hidden');
            }
            
            openBookModal();
        }

        // Open book modal
        function openBookModal() {
            bookModal.classList.remove('hidden');
            setTimeout(() => {
                bookModal.querySelector('.modal-container').classList.add('opacity-100', 'translate-y-0');
            }, 10);
        }

        // Close book modal
        function closeBookModal() {
            bookModal.querySelector('.modal-container').classList.remove('opacity-100', 'translate-y-0');
            setTimeout(() => {
                bookModal.classList.add('hidden');
            }, 300);
        }

        // Open delete modal
        function openDeleteModal(bookId) {
            const book = books.find(b => b.id === bookId);
            if (!book) return;

            currentBookId = bookId;
            deleteBookTitle.textContent = book.title;
            
            deleteModal.classList.remove('hidden');
            setTimeout(() => {
                deleteModal.querySelector('.modal-container').classList.add('opacity-100', 'translate-y-0');
            }, 10);
        }

        // Close delete modal
        function closeDeleteModal() {
            deleteModal.querySelector('.modal-container').classList.remove('opacity-100', 'translate-y-0');
            setTimeout(() => {
                deleteModal.classList.add('hidden');
            }, 300);
        }

        // Handle form submission
        function handleFormSubmit(e) {
            e.preventDefault();
            
            const title = document.getElementById('title').value;
            const author = document.getElementById('author').value;
            const isbn = document.getElementById('isbn').value;
            const publisher = document.getElementById('publisher').value;
            const year = document.getElementById('year').value;
            const pages = document.getElementById('pages').value;
            const category = document.getElementById('category').value;
            const language = document.getElementById('language').value;
            const description = document.getElementById('description').value;
            const status = document.getElementById('status').value;
            const coverFile = coverInput.files[0];
            
            // In a real app, you would send this data to a server
            console.log('Form submitted:', { 
                title, author, isbn, publisher, year, pages, 
                category, language, description, status, coverFile 
            });
            
            // Simulate saving
            setTimeout(() => {
                alert(isEditMode ? 'Livro atualizado com sucesso!' : 'Livro adicionado com sucesso!');
                closeBookModal();
                
                // In a real app, you would update the table after server response
                if (isEditMode) {
                    // Update book in the table
                    const index = books.findIndex(b => b.id === currentBookId);
                    if (index !== -1) {
                        books[index] = { 
                            ...books[index], 
                            title, author, isbn, publisher, year: parseInt(year), 
                            pages: parseInt(pages), category, language, description, status 
                        };
                        if (coverFile) {
                            // In a real app, you would upload the image and get the URL
                            books[index].cover = URL.createObjectURL(coverFile);
                        }
                        renderBooksTable();
                    }
                } else {
                    // Add new book to the table
                    const newId = books.length > 0 ? Math.max(...books.map(b => b.id)) + 1 : 1;
                    const newBook = {
                        id: newId,
                        title,
                        author,
                        category,
                        status,
                        added: new Date().toLocaleDateString('pt-BR'),
                        rating: (Math.random() * 1 + 4).toFixed(1),
                        cover: coverFile ? URL.createObjectURL(coverFile) : 'https://via.placeholder.com/150',
                        description,
                        isbn,
                        publisher,
                        year: parseInt(year),
                        pages: parseInt(pages),
                        language
                    };
                    books.unshift(newBook);
                    renderBooksTable();
                }
            }, 500);
        }

        // Handle delete book
        function handleDeleteBook() {
            // Find the index of the book to delete
            const index = books.findIndex(book => book.id === currentBookId);
            
            if (index !== -1) {
                // Remove the book from the array
                books.splice(index, 1);
                
                // Close the delete modal
                closeDeleteModal();
                
                // Show success message
                alert('Livro excluído com sucesso!');
                
                // Update the table
                renderBooksTable();
            } else {
                alert('Livro não encontrado!');
            }
        }

        // Initialize the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</main>