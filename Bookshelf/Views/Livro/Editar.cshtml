@model Bookshelf.Models.Livro

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastrar Livro";
}

<main class="flex-grow flex items-center justify-center p-4">
    <div class="container mx-auto max-w-4xl">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row">
            <div class="md:w-1/2 bg-gradient-to-br from-yellow-500 to-yellow-700 p-8 text-white flex flex-col justify-center">
                <div class="text-center mb-6">
                    <h2 class="text-2xl font-bold mb-2">Edite o Livro</h2>
                    <p class="text-yellow-100"></p>
                </div>
                <img src="https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?auto=format&fit=crop&w=800&q=80" alt="Livro na mesa" class="w-full max-w-xs mx-auto rounded-lg floating" />
                <div class="mt-8 text-center">
                    <p class="text-yellow-100">Voltar para <a asp-controller="Livro" asp-action="Index" class="gold-text font-medium hover:underline">listagem</a></p>
                </div>
            </div>

            <div class="md:w-1/2 p-8 md:p-10">
                <div class="text-center mb-8">
                    <h2 class="text-2xl font-bold text-yellow-800 mb-2">Editar Livro</h2>
                    <p class="text-gray-600">Altere os detalhes do livro abaixo</p>
                </div>

                <form name="Editar" asp-action="Editar" asp-controller="Livro" method="post" class="space-y-4">

                    <input name="Id" type="hidden" asp-for="Id" value="@Model?.Id"/>

                    <div>
                        <label asp-for="Titulo" class="block text-sm font-medium mb-1">Título</label>
                        <input asp-for="Titulo" name="Titulo" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.Titulo"/>
                    </div>

                    <div>
                        <label asp-for="Autor" class="block text-sm font-medium mb-1">Autor</label>
                        <input asp-for="Autor" name="Autor" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.Autor"/>
                    </div>

                    <div>
                        <label asp-for="Editora" class="block text-sm font-medium mb-1">Editora</label>
                        <input asp-for="Editora" name="Editora" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.Editora"/>
                    </div>

                    <div>
                        <label asp-for="AnoPublicacao" class="block text-sm font-medium mb-1">Ano de Publicação</label>
                        <input asp-for="AnoPublicacao" name="AnoPublicacao" type="number" min="0" max="@DateTime.Now.Year" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.AnoPublicacao"/>
                    </div>

                    <div>
                        <label asp-for="ISBN" class="block text-sm font-medium mb-1">ISBN</label>
                        <input asp-for="ISBN" name="ISBN" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.ISBN"/>
                    </div>

                    <div>
                        <label asp-for="Genero" class="block text-sm font-medium mb-1">Gênero</label>
                        <input asp-for="Genero" name="Genero" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.Genero"/>
                    </div>

                    <div>
                        <label asp-for="CapaUrl" class="block text-sm font-medium mb-1">URL da Capa</label>
                        <input asp-for="CapaUrl" name="CapaUrl" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="@Model?.CapaUrl"/>
                    </div>

                    <div>
                        <button type="submit" class="bg-amber-500 text-white py-2 px-4 rounded-lg hover:bg-amber-600">Salvar Alterações</button>
                    </div>
                </form>
                <p>@Model?.Titulo</p>
            </div>
        </div>
    </div>
</main>
