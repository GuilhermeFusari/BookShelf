@model Bookshelf.Models.ViewModels.HomeIndexViewModel

@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
    ViewData["MainContainerClass"] = "w-full";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-900 via-blue-700 to-green-500 text-blue-50 p-10 rounded-3xl mt-8 shadow-2xl flex flex-col md:flex-row items-center justify-between mb-12">
    <div class="md:w-1/2 mb-8 md:mb-0">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-4 leading-tight drop-shadow-lg">Descubra, registre e compartilhe suas leituras com <span class="gold-text">BookShelf</span></h1>
        <p class="text-lg md:text-xl mb-6 leading-normal text-blue-100">Acompanhe os livros que você leu, salve os que quer ler e encontre novas histórias para se apaixonar.</p>
        <div class="flex space-x-4">
            <a href="/Usuario/Registrar" class="gold-gradient text-white px-8 py-3 rounded-full font-bold text-lg shadow-lg hover:scale-105 transition">Cadastre-se</a>
            <a href="/Livro/ListaLivros" class="border border-blue-50 hover:bg-blue-700 text-blue-50 px-8 py-3 rounded-full font-bold text-lg shadow-lg hover:scale-105 transition">Explorar Livros</a>
        </div>
    </div>
    <div class="md:w-1/2 flex justify-center">
        <img src="https://images.unsplash.com/photo-1519681393784-d120267933ba?auto=format&fit=crop&w=600&q=80" 
             alt="Pilha de livros" 
             class="w-full max-w-md rounded-2xl shadow-2xl border-4 border-white/30">
    </div>
</section>

<!-- Gêneros em destaque -->
<section class="mt-4 mb-12">
    <h2 class="text-2xl font-bold text-blue-900 mb-6 px-4">Navegue por gênero</h2>
    <div class="w-full bg-gradient-to-r from-blue-100 via-green-100 to-blue-50 border border-blue-200 rounded-2xl shadow-lg px-4 py-4 overflow-x-auto">
        <div class="flex flex-nowrap gap-3 justify-center">
            <a href="/Livro/ListaLivros?genero=Aventura" class="genre-icon bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-mountain text-lg mb-1"></i>
                <span>Aventura</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Romance" class="genre-icon bg-pink-600 hover:bg-pink-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-heart text-lg mb-1"></i>
                <span>Romance</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Terror" class="genre-icon bg-purple-800 hover:bg-purple-900 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-ghost text-lg mb-1"></i>
                <span>Terror</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Fantasia" class="genre-icon bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-dragon text-lg mb-1"></i>
                <span>Fantasia</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Suspense" class="genre-icon bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-question text-lg mb-1"></i>
                <span>Suspense</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Religioso" class="genre-icon bg-yellow-700 hover:bg-yellow-800 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-pray text-lg mb-1"></i>
                <span>Religioso</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Profissional" class="genre-icon bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-briefcase text-lg mb-1"></i>
                <span>Profissional</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Política" class="genre-icon bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-landmark text-lg mb-1"></i>
                <span>Política</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Culinária" class="genre-icon bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-utensils text-lg mb-1"></i>
                <span>Culinária</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Sci-fi" class="genre-icon bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-robot text-lg mb-1"></i>
                <span>Sci-fi</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Infantil" class="genre-icon bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-child text-lg mb-1"></i>
                <span>Infantil</span>
            </a>
            <a href="/Livro/ListaLivros?genero=Acadêmicos" class="genre-icon bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-xl flex flex-col items-center justify-center text-base font-semibold shadow min-w-[90px] transition">
                <i class="fas fa-user-graduate text-lg mb-1"></i>
                <span>Acadêmicos</span>
            </a>
        </div>
    </div>
</section>

<!-- Livros em alta -->
<section class="mt-14">
    <div class="flex justify-between items-center mb-6 px-2">
        <h2 class="text-2xl font-bold text-blue-900 flex items-center drop-shadow">
            <div class="gold-gradient p-2 rounded-md mr-3">
                <i class="fas fa-fire text-white text-lg"></i>
            </div>
            Livros em alta
        </h2>
        <a href="/Livro/ListaLivros" class="text-blue-700 hover:text-blue-900 font-semibold text-lg transition">Ver todos</a>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 px-2">
        @foreach (var livro in Model.Livros)
        {
            <a href="/Livro/Detalhes/@livro.Id" class="block hover:no-underline">
                <div class="book-card bg-white rounded-xl overflow-hidden shadow-lg hover:scale-105 hover:shadow-2xl transition">
                    <img src="@livro.CapaUrl" alt="Capa do livro" class="w-full h-40 object-cover">
                    <div class="p-3">
                        <h3 class="font-semibold text-blue-900 truncate text-base">@livro.Titulo</h3>
                        <p class="text-xs text-gray-600 mb-1">@livro.Autor</p>
                        <div class="flex items-center text-amber-400">
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="fas fa-star text-xs"></i>
                            <i class="far fa-star text-xs"></i>
                            <span class="text-xs text-gray-600 ml-1">(0)</span>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</section>

<!-- Lançamentos -->
<section class="mt-16 mb-24">
    <div class="flex justify-between items-center mb-6 px-2">
        <h2 class="text-2xl font-bold text-blue-900 flex items-center drop-shadow">
            <div class="gold-gradient p-2 rounded-md mr-3">
                <i class="fas fa-bolt text-white text-lg"></i>
            </div>
            Lançamentos
        </h2>
        <a href="/Livro/ListaLivros" class="text-blue-700 hover:text-blue-900 font-semibold text-lg transition">Ver todos</a>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 px-2">
        @foreach (var livro in Model.Livros)
        {
            <div class="book-card bg-white rounded-xl overflow-hidden shadow-lg hover:scale-105 hover:shadow-2xl transition">
                <img src="@livro.CapaUrl" alt="Capa do livro" class="w-full h-40 object-cover">
                <div class="p-3">
                    <h3 class="font-semibold text-blue-900 truncate text-base">@livro.Titulo</h3>
                    <p class="text-xs text-gray-600 mb-1">@livro.Autor</p>
                    <div class="flex items-center text-amber-400">
                        <i class="fas fa-star text-xs"></i>
                        <i class="fas fa-star text-xs"></i>
                        <i class="fas fa-star text-xs"></i>
                        <i class="fas fa-star text-xs"></i>
                        <i class="far fa-star text-xs"></i>
                        <span class="text-xs text-gray-600 ml-1">(0)</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Footer -->
<footer class="bg-blue-900 text-blue-50 w-full mt-0">
    <div class="max-w-7xl mx-auto px-4 py-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- About Section -->
            <div class="md:col-span-2">
                <div class="flex items-center space-x-2 mb-3">
                    <div class="gold-gradient p-2 rounded-lg">
                        <i class="fas fa-book-open text-lg text-white"></i>
                    </div>
                    <h2 class="text-2xl font-bold">BookShelf</h2>
                </div>
                <p class="mb-4 text-scale-90 leading-normal">BookShelf é a sua plataforma para registrar, organizar e descobrir novos livros. Conecte-se com outros leitores e compartilhe suas experiências literárias.</p>
                <div class="flex space-x-3">
                    <a href="#" class="hover:text-amber-300 transition text-xl">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="hover:text-amber-300 transition text-xl">
